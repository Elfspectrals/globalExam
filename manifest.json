{
  "manifest_version": 3,
  "name": "GlobalExam Question Extractor",
  "version": "1.0.0",
  "description": "Extrait la premi√®re question de GlobalExam",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.global-exam.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.global-exam.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

